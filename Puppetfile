forge "http://forge.puppetlabs.com"

# These guys are required by the git modules and librarian-puppet seems
# to have issues when they are not specified here, even though they are listed
# as dependencies
mod 'puppetlabs/stdlib'
mod 'puppetlabs/firewall'
mod 'puppetlabs/gcc'
mod 'maestrodev/wget'

mod 'rbenv',      :git => 'https://github.com/alup/puppet-rbenv.git'
mod 'postgresql', :git => 'https://github.com/akumria/puppet-postgresql.git'
mod 'memcached',  :git => 'https://github.com/saz/puppet-memcached.git'
mod 'redis',      :git => 'https://github.com/thomasvandoren/puppet-redis.git'
mod 'apache',     :git => 'https://github.com/puppetlabs/puppetlabs-apache', :ref => '0.4.0'
mod 'php',        :git => 'https://github.com/saz/puppet-php.git'
